<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pre_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hengda.linhai.m.ui.PreViewActivity">
    <RelativeLayout
        android:id="@+id/rl_preview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#cc22292c"
        android:clickable="true">

        <ImageView
            android:id="@+id/photo_back"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back_press"
            android:padding="14dp"
            android:src="@mipmap/ic_back"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/preview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_preview"
        />
</RelativeLayout>
