<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp">
<ImageView
    android:id="@+id/item_head_comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_centerVertical="true"
    android:src="@mipmap/img_head_comment"/>
    <LinearLayout
        android:id="@+id/item_ll_conment"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <TextView
        android:id="@+id/item_name_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="李明"/>
    <TextView
        android:id="@+id/item_area_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/item_name_tv_comment"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="1F 临时展厅"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/location_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_loaction"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"

        />
</RelativeLayout>